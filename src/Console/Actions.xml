<?xml version="1.0" encoding="utf-8" ?>
<actions>
  <action id="Console.ShowConsole" text="Console" image="JetBrains.DotPeek.Plugins.Console.ConsoleThemedIcons+Console">
  </action>
  
  <action id="Console.OpenAssemblyInConsole" text="Open Assembly in Console" image="JetBrains.DotPeek.Plugins.Console.ConsoleThemedIcons+Console">
    <shortcut>Ctrl+Shift+X</shortcut>
    <vs-shortcut>Ctrl+Shift+X</vs-shortcut>
  </action>

  <insert group-id="DotPeek.Tools" position="after" anchor-id="ExploreStackTrace">
    <action-ref id="Console.ShowConsole" />
  </insert>

  <insert group-id="AssemblyExplorerContextMenu" position="after" anchor-id="BrowseReferencesHierarchy">
    <separator />
    <action-ref id="Console.OpenAssemblyInConsole" />
  </insert>
</actions>