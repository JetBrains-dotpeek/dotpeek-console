<UserControl x:Class="JetBrains.DotPeek.Plugins.Console.ToolWindow.ConsoleToolWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:JetBrains.DotPeek.Plugins.Console.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid x:Name="grid" ForceCursor="True">
        <controls:ConsoleControl x:Name="Console" VerticalScrollBarVisibility="Auto" Background="Black" Foreground="White" FontFamily="Consolas" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}">
        </controls:ConsoleControl>
    </Grid>
</UserControl>
